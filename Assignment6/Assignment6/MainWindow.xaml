        <ListBox x:Name="listBox_CompanyAddress" HorizontalAlignment="Left" Height="137" Margin="427,176,0,0" VerticalAlignment="Top" Width="318" FontSize="14"/>
        <DataGrid x:Name="dataGrid_ProductDetails" HorizontalAlignment="Left" Height="210" Margin="87,366,0,0" VerticalAlignment="Top" Width="614"/>
        <Label x:Name="lbl_Address" Content="Address" HorizontalAlignment="Left" Margin="131,597,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Phone" Content="Phone" HorizontalAlignment="Left" Margin="353,664,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,1.966"/>
        <Label x:Name="lbl_HomePage" Content="Home Page" HorizontalAlignment="Left" Margin="355,726,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBox_Address" HorizontalAlignment="Left" Height="151" Margin="131,631,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193"/>
        <TextBox x:Name="txtBox_Phone" HorizontalAlignment="Left" Height="23" Margin="355,698,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <TextBox x:Name="txtBox_HomePage" HorizontalAlignment="Left" Height="22" Margin="355,760,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203"/>
        <TextBox x:Name="txtBox_DiscountNumber" HorizontalAlignment="Left" Height="24" Margin="526,602,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" PreviewTextInput="txtBox_DiscountNumber_PreviewTextInput"/>
        <TextBox x:Name="txtBox_AmountToPayNumber" HorizontalAlignment="Left" Height="24" Margin="526,631,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <Label x:Name="lbl_Discount" Content="Discount/Voucher" HorizontalAlignment="Left" Margin="388,597,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_AmountToPay" Content="Amount to play" HorizontalAlignment="Left" Margin="402,630,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Total" Content="Total" HorizontalAlignment="Left" Margin="469,576,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBox_Total" HorizontalAlignment="Left" Height="23" Margin="526,576,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>

    </Grid>
</Window>
